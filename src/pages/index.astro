  }
  img {
    max-width: 100%;
    max-height: auto;
  }
  a {
    color: #ba2228;
  }
  p {
    line-height: 1.25;
  }
  .popover-overlay {
    background-color: rgba(0,0,0,0.1);
    position: fixed;
    inset: 0;
    padding: 1rem;
    color: #ba2228;
    display: flex;
    z-index: 0;
    justify-content: center;
    transition: opacity 0.267s ease-out;
  }
  .popover-overlay.hide {
    opacity: 0;
  }
  .popover {
    position: relative;
    background-color: #fcfaea;
    border-radius: 1rem;
    width: 100%;
    box-shadow: 0 0 6px rgba(0,0,0,0.4);
    padding: clamp(1rem, 8vw, 5rem);
    padding-bottom: clamp(2rem, 2vw, 3rem);
    box-sizing: border-box;
    overflow-y: scroll;
    z-index: 1;
    max-width: 786px;
    transition: filter 0.287s ease-in, transform 0.287s ease-in;
    transform-origin: right top;
    font-size: 16px;
  }
  .popover p {
     font-family: "Lora";
  }
  .popover::-webkit-scrollbar {
    display: none;
  }
  .hide .popover {
    filter: blur(20px);
    transform: scale(0);
  }
  .popover-close {
    position: sticky;
    top: 0;
    left: calc(100% - 2.5rem);
    text-decoration: underline;
    text-shadow: 0 0 4px #999;
    color: #444;
    background-color: #fcfaea99;
    box-sizing: border-box;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    margin-right: -0.75rem;
    display: block;
    width: min-content;
    padding-top: 0.5rem;
  }
  .popover-close svg {
    width: 1.5rem;
  }
  @media (min-width: 768px) {
    .popover-close {
      left: 90%;
    }
  }
  .cover {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(285px, 1fr));
    gap: 0.125rem;
    margin-top: clamp(0.5rem, 5vw, 3rem);
    max-width: 580px;
    margin-inline: auto;
  }
  .title {
    overflow: hidden;
    text-align: center;
  }
  .title img {
    display: block;
    margin-inline: auto;
  }
  .title svg {
    font-family: 'Good Unicorn';
    font-size: 1rem;
    max-width: 100%;
    height: 100%;
    margin-left: 6%;
    letter-spacing: initial;
    text-transform: none;
  }
  .title span {
    width: 0;
    height: 0;
    position: absolute;
    left: 0;
    top: 0;
    opacity: 0;
  }
  .intro {
    font-family: 'Good Unicorn';
    margin-top: clamp(2rem, 4vw, 4rem);
    letter-spacing: 1px;
  }
  @media (min-width: 540px) {
    .intro {
      margin-bottom: clamp(0px, 4vw, 2rem);
    }
  }
  .intro span {
    font-size: clamp(1.75rem, 3vw, 2.2rem);
    display: block;
    text-align: center;
  }
  .intro .heading {
    font-size: clamp(42px, 4.8vw, 3.5rem);
    margin-bottom: clamp(1rem, 4vw, 3rem);
  }
  .body-text {
    box-sizing: border-box;
    max-width: 580px;
    margin-inline: auto;
    font-family: 'Lora';
  }
  .ammu {
    max-height: clamp(9rem, 37vw, 18rem);
    margin-inline: auto;
    float: right;
    margin-top: 1rem;
    margin-left: 0.5rem;
  }
  .soon-heading, .meet-heading {
    font-family: 'Good Unicorn';
    font-size: 2rem;
    letter-spacing: 2px;
    margin-top: 3rem;
    letter-spacing: 3px;
    text-align: center;
    font-weight: 400;
    text-transform: none;
  }
  .soon-heading {
    font-size: clamp(2.5rem, 6vw, 3.5rem);
  }
  .CKT-portrait {
    border-radius: 5rem 5rem 0 0;
    max-width: 80%;
    max-height: 380px;
    display: block;
    margin-inline: auto;
    box-shadow: 0 2px 7px #00000033;
  }
  @media (min-width: 650px) {
    .CKT-portrait {
      float: left;
      margin-right: clamp(1rem, 2vw, 1.5rem);
    }
  }
  .flipbook {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(285px, 1fr));
    max-width: 580px;
    margin-inline: auto;
  }
  .flipbook img:first-child {
    border-radius: 4px 4px 0 0;
  }
  .flipbook img:last-child {
    border-radius: 0 0 4px 4px;
  }
  @media (min-width: 687px) {
    .flipbook img:last-child,
    .flipbook img:first-child {
      border-radius: 0;
    }
  }
</style>

